<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/send_notif_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Notify"
        app:layout_constraintEnd_toEndOf="@+id/token_et"
        app:layout_constraintStart_toStartOf="@+id/token_et"
        app:layout_constraintTop_toBottomOf="@+id/token_et" />

    <EditText
        android:id="@+id/token_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:hint="Token"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Note: check server key in ApiService"
        app:layout_constraintBottom_toTopOf="@+id/token_et"
        app:layout_constraintEnd_toEndOf="@+id/token_et"
        app:layout_constraintStart_toStartOf="@+id/token_et" />
</androidx.constraintlayout.widget.ConstraintLayout>